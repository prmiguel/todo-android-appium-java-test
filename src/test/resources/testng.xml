<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Todo Automation Suite" parallel="tests" thread-count="1">

    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
    </test>

    <test name="Functional Tests">
        <groups>
            <run>
                <include name="functional"/>
                <exclude name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="test.android.todo.test.FilterByCompletedTest"/>
        </classes>
    </test>
</suite>
